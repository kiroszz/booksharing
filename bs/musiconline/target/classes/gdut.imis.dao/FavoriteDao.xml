<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="gdut.imis">
    <select id="addFavorite" parameterType="gdut.imis.domain.Favorite" >
        insert into favorite
        values (#{username},#{musicid})
    </select>

    <select id="getFavorite" parameterType="java.lang.String" resultType="gdut.imis.domain.Favorite">
        select * from favorite
        where username = #{username}
    </select>

    <select id="findFavorite" parameterType="gdut.imis.domain.Favorite" resultType="gdut.imis.domain.Favorite">
        select * from favorite
        where username = #{username} and musicid = #{musicid}
    </select>

    <delete id="deleteFavorite" parameterType="gdut.imis.domain.Favorite">
        delete from favorite
        where username = #{username} and musicid = #{musicid} ;
    </delete>
</mapper>