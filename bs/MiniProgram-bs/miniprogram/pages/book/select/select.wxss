/* pages/circle/index/index.wxss */

/* 页面背景 */
page {
  background-color: #EFEFEF;
}

/* 页面布局相关 */
.scbg {
  margin-top: 20rpx;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}

.box {
  border-radius: 12px;
  width: 45.5%;
  background-color: white;
  border-bottom: 15px;
  margin-left: 3%;
}

/* 用户信息样式 */
.secondblock {
  display: flex;
  flex-flow: column;
  margin-left: 4%;
  margin-right: 4%;
  padding-bottom: 15rpx;
  border-radius: 12px;
  margin-top: 0;
}

.touxiang {
  width: 60rpx;
  height: 60rpx;
  border-radius: 10px;
  margin-bottom: 5rpx;
}

.showname {
  font-size: 32rpx;
  color: #3F51B5;
  font-family: PingFangSC-regular;
  margin-top: 6rpx;
  margin-left: 2rpx;
}

.name {
  display: flex;
  justify-content: flex-start;
  margin-top: 10rpx;
  margin-left: 0%;
  margin-right: 6%;
  font-size: 40rpx;
  flex-direction: row;
  border-bottom: 1rpx solid #CFCFCF;
}

/* 书籍信息卡样式 */
.book-box {
  display: flex;
  flex-flow: column;
  margin-top: 10rpx;
}

.bookname {
  font-size: 32rpx;
  color: #F57123;
  font-family: PingFangSC-regular;
  word-break: break-all;
}

.content {
  /* 文本溢出省略 */
  display: -webkit-box;
  word-break: break-all;
  text-overflow: ellipsis;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  font-size: 26rpx;
  color: black;
  font-family: PingFangSC-regular;
  word-break: break-all;
  padding-top: 5rpx;
  padding-left: 14rpx;
}

.photo {
  width: 220rpx;
  height: 200rpx;
  border-radius: 1px;
}

.showtime {
  padding-top: 55rpx;
  padding-left: 200rpx;
  font-size: 20rpx;
  color: gray;
  font-family: PingFangSC-regular;
}

/* 搜索栏样式 */
.inputs {
  text-align: center;
  box-sizing: border-box;
  font-size: 33rpx;
  border-radius: 12px;
  border: 1px solid #c8cccf;
  color: #6a6f77;
  display: block;
  outline: 0;
  padding: 0 1em;
  height: 80rpx;
  width: 80%;
  line-height: 80rpx;
  margin-top: 20rpx;
  margin-left: 10%;
}

.btn {
  width: 30%;
  height: 80rpx;
  line-height: 80rpx;
  margin-left: 35%;
  margin-top: 50rpx;
  border-radius: 12px;
  background-color: #436eee;
  text-align: center;
  color: white;
  font-size: 28rpx;
}

.weui-icon-search_in-box {
  position: absolute;
  top: 40rpx;
  left: 25rpx;
}

.weui-icon-clear {
  position: absolute;
  top: 40rpx;
  right: 25rpx;
}

/* 历史搜索 */
.history {
  display: flex;
  flex-direction: row;
}

.historybtn {
  font-size: 35rpx;
  padding-left: 30rpx;
  padding-right: 30rpx;
  padding-bottom: 10rpx;
  padding-top: 10rpx;
  border-radius: 30rpx;
  background-color: Azure;
  margin-left: 20rpx;
  margin-top: 10rpx;
}

.deletehistory {
  margin-top: 30rpx;
  padding: 10rpx;
  color: blue;
  background-color: GhostWhite;
  border-radius: 20rpx;
  font-size: 30rpx;
  margin-right: 520rpx;
  margin-left: 30rpx;
}