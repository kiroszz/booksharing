/* pages/circle/index/index.wxss */

/* 页面背景 */
page {
  background-color: #EFEFEF;
}

/* 导航栏样式 */
.bottomrow {
  background-color: white;
  width: 100%;
  height: 9%;
  display: flex;
  position: fixed;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

.bottomtab {
  width: 30%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.bottomtabText {
  font-size: 35rpx;
  color: #979797;
}

/* 搜索书籍 */
.selectbook {
  top: 15rpx;
  right: 25rpx;
  width: 70rpx;
  height: 70rpx;
  position: fixed;
}

/* 导航栏布局相关 */
.tabscr {
  width: 100%;
  height: 90rpx;
  background: #fff;
  /* 顶部固定 */
  position: fixed;
  top: 0;
  z-index: 1;
}

.navbar {
  width: 83%;
  height: 90rpx;
  /* 文本不换行 */
  white-space: nowrap;
  box-sizing: border-box;
  background: #fff;
  align-items: center;
  /* 固定在顶部 */
  position: fixed;
  left: 0;
  top: 0;
  z-index: 1;
}


.nav-item {
  padding-left: 25rpx;
  padding-right: 25rpx;
  height: 100%;
  display: inline-block;
  /* 普通文字大小 */
  font-size: 28rpx;
}

.nav-text {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  letter-spacing: 4rpx;
  box-sizing: border-box;
}

.tab-on {
  color: #436eee;
  /* 选中放大 */
  font-size: 38rpx !important;
  font-weight: 600;
  border-bottom: 4rpx solid #436eee !important;
}

/* 页面布局相关 */
.scbg {
  top: 9%;
  position: absolute;
  background-color: #EFEFEF;
  width: 98%;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}

.box {
  height: 500rpx;
  border-radius: 12px;
  width: 45.5%;
  background-color: white;
  margin-bottom: 10px;
  margin-left: 3.5%;
}

/* 用户信息样式 */
.secondblock {
  display: flex;
  flex-flow: column;
  margin-left: 4%;
  margin-right: 4%;
  padding-bottom: 15rpx;
  border-radius: 12px;
  margin-top: 0;
}

.touxiang {
  width: 60rpx;
  height: 60rpx;
  border-radius: 10px;
  margin-bottom: 5rpx;
}

.showname {
  font-size: 32rpx;
  color: #3F51B5;
  font-family: PingFangSC-regular;
  margin-top: 6rpx;
  margin-left: 2rpx;
}

.name {
  display: flex;
  justify-content: flex-start;
  margin-top: 10rpx;
  margin-left: 0%;
  margin-right: 6%;
  font-size: 40rpx;
  flex-direction: row;
  border-bottom: 1rpx solid #CFCFCF;
}

/* 书籍信息样式 */
.book-box {
  display: flex;
  flex-flow: column;
  margin-top: 20rpx;
}

.bookname {
  font-size: 32rpx;
  color: #F57123;
  font-family: PingFangSC-regular;
  word-break: break-all;
  /* 文本溢出省略 */
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.content {
  /* 超出文本省略 */
  display: -webkit-box;
  word-break: break-all;
  text-overflow: ellipsis;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  font-size: 26rpx;
  color: black;
  font-family: PingFangSC-regular;
  word-break: break-all;
  padding-top: 5rpx;
  padding-left: 14rpx;
}

.photo {
  width: 220rpx;
  height: 200rpx;
  border-radius: 1px;
}

.showtime {
  position: absolute;
  margin-top: 355rpx;
  margin-left: 190rpx;
  font-size: 20rpx;
  color: gray;
  font-family: PingFangSC-regular;
}

/* 提示登录相关 */
.loginimg {
  width: 300rpx;
  height: 300rpx;
  margin-top: 35%;
  margin-left: 28%;
}

.loginsign {
  text-align: center;
}

.tologin,
.signup {
  color: #436eee;
}