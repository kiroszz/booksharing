@import "../../../style/guide.wxss";

/* 页面背景 */
page {
  background-color: #EFEFEF;
}

/* 页面布局相关 */
.first-block {
  display: flex;
  align-items: center;
  border-bottom: 1px solid rgba(0, 0, 0, 0.1);
  padding-left: 20rpx;
  width: 100%
}

.guide .counter {
  margin-top: 50rpx;
  display: flex;
  flex-direction: row;
  align-content: space-between;
}

.uploader {
  margin-top: 0;
  border: 0;
}

/* 聊天信息样式 */
.tel {
  display: flex;
  flex-direction: column;
  margin-top: 20rpx;
}

.touxiang {
  width: 96rpx;
  height: 80rpx;
  border-radius: 50rpx;
  margin-right: 20rpx;
  margin-top: 25rpx;
}

.nametime {
  display: flex;
}

.showname {
  color: black;
  font-size: 35rpx;
}

.showtime {
  margin-top: 5rpx;
  font-size: 26rpx;
  color: #bfbfbf;
  position: absolute;
  right: 30rpx;
}

/* 聊天的最后一句话 */
.lastword {
  margin-top: 15rpx;
  font-size: 24rpx;
  color: #bfbfbf;
  margin-bottom: 20rpx;
  width: 550rpx;
  /* 文本溢出省略 */
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.toChatroom {
  display: flex;
  width: 100%;
  padding-top: 10rpx;
}

/* 提示登录相关 */
.loginimg {
  width: 300rpx;
  height: 300rpx;
  margin-top: 35%;
  margin-left: 28%;
}

.loginsign {
  text-align: center;
}

.tologin,
.signup {
  color: #436eee;
}